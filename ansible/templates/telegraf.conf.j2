# Global Agent Configuration
[agent]
  hostname = "{{ telegraf_hostname }}"
  flush_interval = "15s"
  interval = "15s"

# Input Plugins
[[inputs.cpu]]
    percpu = true
    totalcpu = true
    collect_cpu_time = false
    report_active = false
[[inputs.disk]]
    ignore_fs = ["tmpfs", "devtmpfs", "devfs"]
[[inputs.fail2ban]]
    use_sudo = true
[[inputs.io]]
[[inputs.mem]]
[[inputs.net]]
[[inputs.system]]
[[inputs.swap]]
[[inputs.netstat]]
[[inputs.processes]]
[[inputs.kernel]]
[[inputs.logparser]]
  files = ["/var/log/fail2ban.log"]
  from_beginning = false
  name_override = "fail2ban_log"
  [inputs.logparser.grok]
    patterns = ["%{TS_F2B:timestamp:ts-\"2006-01-02 15:04:05.000\"} fail2ban.actions%{SPACE}\\[%{NUMBER:pid:int}\\]: NOTICE%{SPACE}\\[%{WORD:service}\\] %{ACTION:action} %{IP:ip}"]
    custom_patterns = '''
        TS_F2B %{YEAR}-%{MONTHNUM}-%{MONTHDAY} %{HOUR}:%{MINUTE}:%{SECOND},%{NUMBER}
        ACTION (Ban|Unban)
'''

# Output Plugin InfluxDB
[[outputs.influxdb]]
  database = "telegraf"
  urls = [ "{{ influxdb_server }}" ]
  username = "{{ influxdb_user }}"
  password = "{{ influxdb_pass }}"
